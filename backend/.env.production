# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Flask
SECRET_KEY=your-production-secret-key-change-this
FLASK_ENV=production
FLASK_DEBUG=False

# Database
DATABASE_URL=mysql+pymysql://root:your_mysql_password@mysql:3306/voice_flow

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Email (Optional - for SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@localuae.com

# Email (SMTP - if using SMTP instead of SendGrid)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Frontend URL
FRONTEND_URL=https://localuae.com
